<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <%
     if(!user){%>
      <a href="/login">登录</a><a href="/reg">注册</a>
    <% }
    else
     {%>
    <p>欢迎 <%= user.name %> <a href="/logout">登出</a></p>

     <%}
     %>


    <ul class="nav">
 		<% if (!user) { %>
        <li class="active"><a href="/">首页</a></li>
 			<% } else { %>
      <li><a href="/article">添加文章</a></li>
        <% articles.forEach(function(article,index){%>
            <table>
                <th>标题</th>  <th>内容</th>  <th>创建时间</th>  <th>创建人</th><th>操作</th>
                <tr>
                    <td><span><%=article.title%></span></td>
                    <td><span><%=article.content%></span></td>
                    <td><span><%=article.createtime%></span></td>
                    <td><%=article.createuser%></td>
                    <td><a href="/update/<%=article.title%>">修改</a> &nbsp;&nbsp;<a href="/delete/<%=article.title%>">删除</a> </td>
                </tr>
            </table>
        <% })}%>
	</ul>

    <% if (success) { %>
    <div class="alert alert-success">
        <%= success %>
    </div>
    <% } %>
    <% if (error) { %>
    <div class="alert alert-error">
        <%= error %>
    </div>
    <% } %>
  </body>
</html>
